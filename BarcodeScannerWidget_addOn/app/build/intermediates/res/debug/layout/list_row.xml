<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/stuff_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:paddingStart="10dp"
        android:text="This&apos;s Title"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stuff_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="1dp"
            android:paddingStart="10dp"
            android:text="dd-mm-yyyy"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stuff_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuff_date"
            android:paddingEnd="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="1dp"
            android:paddingStart="10dp"
            android:text="HH:MM"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stuff_location"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/stuff_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/stuff_date"
            android:paddingEnd="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingStart="30dp"
            android:singleLine="false"
            android:text="Darmstadt Hbf"
            android:textSize="14dp"
            android:textStyle="italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/stuff_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:paddingEnd="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:paddingStart="10dp"
        android:singleLine="false"
        android:text="This&apos;s where I place \nthe content..."
        android:textStyle="normal" />

</LinearLayout><!-- From: file:/home/lukas/AndroidStudioProjects/BarcodeScannerWidget_addOn-master/app/src/main/res/layout/list_row.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dip" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:gravity="top|center_horizontal"
        android:singleLine="false"
        android:text="What do you want to do?" >
    </TextView>

    <Button
        android:id="@+id/main_cap_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:gravity="center_horizontal"
        android:text="Capture Barcode"
        android:textAlignment="center" />

    <Button
        android:id="@+id/main_cap_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_cap_barcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:text="Capture Image"
        android:textAlignment="center" />

    <Button
        android:id="@+id/main_show_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_cap_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:text="Show List"
        android:textAlignment="center" />

    <RelativeLayout
        android:id="@+id/main_logo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ess_logo"
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ess_logo" >
        </ImageView>

        <TextView
            android:id="@+id/version_nme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Version 2.0"
            android:textSize="10dp"
            android:layout_alignParentBottom="true" >
        </TextView>

        <ImageView
            android:id="@+id/porc_logo"
            android:layout_width="60dip"
            android:layout_height="80dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/porcupine" >
        </ImageView>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/lukas/AndroidStudioProjects/BarcodeScannerWidget_addOn-master/app/src/main/res/layout/fragmen_main.xml -->